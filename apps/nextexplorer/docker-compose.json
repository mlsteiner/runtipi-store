{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "nextexplorer",
      "image": "nxzai/explorer:v2.1.0",
      "isMain": true,
      "internalPort": 3000
    }
  ],
  "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
  "volumes": [
    {
      "hostPath": "${APP_DATA_DIR}/data/config",
      "containerPath": "/config"
    },
    {
      "hostPath": "${APP_DATA_DIR}/data/cache",
      "containerPath": "/cache"
    }
  ],
  "healthCheck": {
        "test": "curl --fail http://localhost || exit 1",
        "retries": 3,
        "interval": "30s",
        "timeout": "10s"
      }
}
