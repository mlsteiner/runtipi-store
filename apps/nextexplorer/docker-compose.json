{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "nextexplorer",
      "image": "nxzai/explorer:v2.0.2",
      "isMain": true,
      "internalPort": 3000
    }
  ],
  "volumes": [
    {
      "hostPath": "${APP_DATA_DIR}/config",
      "containerPath": "/config"
    },
    {
      "hostPath": "${APP_DATA_DIR}/cache",
      "containerPath": "/cache"
    }
  ],
  "healthCheck": {
        "test": "curl --fail http://localhost || exit 1",
        "retries": 3,
        "interval": "30s",
        "timeout": "10s"
      } 
}
